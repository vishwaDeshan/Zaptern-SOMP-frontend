{
  "compilerOptions": {
    "target": "es2022",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": false,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@shared/ui-styles/*": ["libs/shared/ui/src/lib/ui-styles/*"],
      "@zaptern-somp-frontend/*": [
        "libs/*/src/index.ts",
        "libs/shared/*/src/index.ts", 
        "libs/components/*/src/index.ts",
        "libs/directives/*/src/index.ts",
        "libs/somp-portal/*/src/index.ts",
        "libs/auto-savable-form/*/src/index.ts",
        "libs/shared/shared-data-access/*/src/index.ts"
      ]
    }
  },
  "files": [],
  "include": [],
  "references": [
    {
      "path": "./tsconfig.editor.json"
    },
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.spec.json"
    }
  ],
  "extends": "../../tsconfig.base.json",
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
